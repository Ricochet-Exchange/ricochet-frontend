    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-react": "7.20.3",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "node-sass": "5.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint",
