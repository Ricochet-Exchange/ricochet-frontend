  "dependencies": {
    "@ethersproject/contracts": "^5.3.0",
    "@ethersproject/providers": "^5.3.0",
    "@superfluid-finance/js-sdk": "^0.4.3",
    "@truffle/contract": "^4.3.31",
    "axios": "0.21.1",
    "classnames": "2.2.6",
    "cross-env": "7.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-modal": "3.12.1",
    "react-redux": "^7.2.4",
    "react-scripts": "4.0.3",
    "react-toastify": "7.0.3",
    "redux": "4.0.5",
    "redux-persist": "^6.0.0",
    "redux-saga": "^1.1.3",
